@{
    ViewBag.Title = "Home Page";
}
@{
    Layout = null;
}

<style>
    .error{
        color:red
    }
 

</style>



<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

<link href="~/Content/css/metisMenu.min.css" rel="stylesheet" />


<link href="~/Content/css/startmin.css" rel="stylesheet" />



<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
<div style="border:1px solid">
    <h1 style="text-align:center; color:seagreen">WELCOME TO CHETU INDIA PLEASE SIGN IN</h1>
</div>
@model CHETU_MVC_CRUD_APP.Models.usermodel

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <a href="@Url.Action("user_registration", "Home" )">Sign Up</a>
                    <br />
                    <br />
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {
                        <fieldset>
                            <div class="error">@TempData["invalid"]</div>
                            <div class="error">@TempData["not valid"]</div>
                            <div class="form-group">
                                <label>EMAIL</label>
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "email" })
                                @Html.ValidationMessageFor(m => m.email,"", new {@class="error" })
                            </div>
                            <div class="form-group">
                                <label>PASSWORD</label>
                                @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "password" })

                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-success btn-block">Login</button>

                            @*<a href="@Url.Action("Index", "Home")" class="btn btn-lg btn-success btn-block">Login</a>*@
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>